;; Global WM Settings

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
; Used for top aligned bars
margin-bottom = 2

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
; Used for bottom aligned bars
margin-top = 0

##########################################################################################################################################

;; File Inclusion
; include an external file, like module file, etc.

include-file = ~/.config/hypr/polybar/modules.ini

##########################################################################################################################################

[color]
;background = ${xrdb:color0:#222}
background = #60000000
;background-alt = #444
foreground = ${xrdb:color7:#222}
;foreground = #f8f8f2
;foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40ff
modulefg = #f7f7f7
modulefg-alt = #f7f7f7

; Active Shade
shade1 = #282629
shade2 = #37474F
shade3 = #455A64
shade4 = #546E7A
shade5 = #607D8B
shade6 = #78909C
shade7 = #90A4AE
shade8 = #B0BEC5

;trans = #ccfaaaaa
;white = #FFFFFF
;black = #000000

##########################################################################################################################################

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

##########################################################################################################################################

[bar/barbase]
width = 100%
height = 24
offset-x = 0%
offset-y = 0
;monitor = ${env:monitor}
monitor-fallback = VGA-1
fixed-center = true
bottom = true

background = ${color.background}
foreground = ${color.foreground}

padding = 1
module-margin-left = 1

font-0 = "SauceCodePro Nerd Font:size=11:weight=semibold;3"
font-1 = "Noto Sans Mono:size=10;0"
font-2 = "FontAwesome:size=10;0"

; highlighted to see where to add the modules
modules-center = cpu
modules-right = arch-updates break powermenu

[bar/mainbar0]
inherit = bar/barbase
;choices : see modules.ini
modules-left = kernel
